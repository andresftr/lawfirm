<div class="card w-75 mb-3">
  <div class="card-body">
    <div class="form-group">
      <%= f.label :affair %><br>
      <%= f.collection_select(:affair_id, Affair.all, :id, :file_number, {prompt: true}, {class: "form-control"}) %>
    </div>

    <div class="form-group form-check">
      <%= f.check_box :_destroy, class: 'form-check-input' %>
      <%= f.label :delete, class: 'form-check-label' %>
    </div>
  </div>
</div>