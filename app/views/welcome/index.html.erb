<% if user_signed_in? %>
  <h1>Welcome <%= current_user.name %> to Law Firm App</h1>
  <div class="accordion w-75" id="mainmenu">
    <div class="card">
      <div id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-light collapsed list-group-item-action" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" >
            Clients
          </button>
        </h5>
      </div>

      <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#mainmenu" >
        <div class="card-body">
          <a class="btn btn-outline-info" href="/clients" role="button">Go to clients list</a>
          <a class="btn btn-outline-info" href="/clients/new" role="button">Create a new client</a>
        </div>
      </div>
    </div>
    <div class="card">
      <div id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-light collapsed list-group-item-action" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" >
            Attorneys
          </button>
        </h5>
      </div>

      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#mainmenu" >
        <div class="card-body">
          <a class="btn btn-outline-info" href="/attorneys" role="button">Go to attorneys list</a>
          <a class="btn btn-outline-info" href="/attorneys/new" role="button">Create a new attorney</a>
        </div>
      </div>
    </div>
    <div class="card">
      <div id="headingThree">
        <h5 class="mb-0">
          <button class="btn btn-light collapsed list-group-item-action" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" >
            Affairs
          </button>
        </h5>
      </div>

      <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#mainmenu" >
        <div class="card-body">
          <a class="btn btn-outline-info" href="/affairs" role="button">Go to affairs list</a>
          <a class="btn btn-outline-info" href="/affairs/new" role="button">Create a new affair</a>
        </div>
      </div>
    </div>
    <div class="card">
      <div id="headingFour">
        <h5 class="mb-0">
          <button class="btn btn-light collapsed list-group-item-action" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour" >
            Assignments
          </button>
        </h5>
      </div>

      <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#mainmenu" >
        <div class="card-body">
          <a class="btn btn-outline-info" href="/assignments" role="button">Go to assignments<%= render template: 'assignments/index' %></a>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h1>Law Firm App</h1>
<% end %>