<!DOCTYPE html>
<html>
  <head>
    <title>Lawfirm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav justify-content-end">
      <%- if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Edit profile ', edit_user_registration_path, class: 'btn btn-primary m-1' %>
        </li>
        <li class="nav-item">
          <%= link_to ' Exit', destroy_user_session_path, method: :delete, class: 'btn btn-danger btn-sm m-1' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary m-1' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-secondary m-1' %>
        </li>
      <% end %>
    </ul>
    <div class = "container p-3">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
