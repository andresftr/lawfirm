<table class="table table-striped">
  <thead>
    <tr>
      <th>Affair</th>
      <th>Attorney</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.affair.file_number %></td>
        <td><%= assignment.attorney.full_name %></td>
        <td><%= link_to 'Show', assignment_path(assignment), class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment), class: 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Destroy', assignment_path(assignment),
                method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>